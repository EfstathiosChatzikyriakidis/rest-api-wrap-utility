<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <appender name="RestApiWrapUtilityLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="C:/Logging/RestApiWrapUtility" type="log4net.Util.PatternString"/>
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <staticLogFileName value="false" />
    <datePattern value="'-'yyyy-MM-dd'.txt'" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d [%t] %-5p %c %m%n" />
    </layout>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref  ref="RestApiWrapUtilityLogFileAppender" />
  </root>
</log4net>
